<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="125dp"
    android:focusable="true"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/frameProjectUsers"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:orientation="horizontal"
        android:layout_marginLeft="@dimen/row_left_margin">

        <ImageView
            android:id="@+id/iconProjectNumUsers"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            />

        <TextView
            android:id="@+id/projectNumUsers"
            android:layout_width="25dp"
            android:layout_height="match_parent" />

    </LinearLayout>


    <TextView
        android:id="@+id/projectName"
        android:textColor="#000"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/frameProjectUsers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/projectDescription"
        android:layout_alignRight="@+id/frameProjectUsers"
        android:layout_below="@+id/projectName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>